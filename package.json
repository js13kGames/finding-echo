{
  "name": "js13k",
  "version": "0.1.0",
  "main": "dist/index.html",
  "author": "Marco <msegreto@miceover.com>",
  "license": "MIT",
  "scripts": {
    "build": "npm run clean && npm run build:js && npm run compile && npm run build:html && npm run gzip",
    "build:js": "webpack",
    "build:html": "inline-assets dist/index.min.html > dist/index.html",
    "clean": "rm -rf dist/*",
    "compile": "npm run compile:js && npm run compile:css && npm run compile:html",
    "compile:js": "uglifyjs --compress -o dist/index.min.js -- dist/index.js",
    "compile:css": "uglifycss src/style.css > dist/style.css",
    "compile:html": "html-minifier --minify-js 0 src/index.html > dist/index.min.html",
    "gzip": "gzip-all dist/*",
    "start": "http-server ./dist -g",
    "test": "[[ $(find ./dist/index.html.gz -type f -size +13000c 2>/dev/null) ]] && echo 'File too large' && exit 1 || exit 0"
  },
  "dependencies": {
    "event-emitter-es6": "^1.1.5",
    "uglify-js": "^3.0.28"
  },
  "devDependencies": {
    "babel": "^6.23.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.0",
    "babel-preset-latest": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "gzip-all": "^1.0.0",
    "html-minifier": "^3.5.3",
    "http-server": "^0.10.0",
    "inline-assets": "^1.2.2",
    "uglify-es": "^3.0.28",
    "uglifycss": "^0.0.27",
    "webpack": "2"
  }
}
